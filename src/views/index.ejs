                </tr>

                
            </tbody>
        </table>
        </div>
        
        <!--button shit that makes more or deletes-->
        <div class="col">
            <button type="button" onclick="addRow()">Add Row</button>
            <button type="button" onclick="delRow()">Delete Row</button>
            <script>
                var tableObj = document.getElementById("dynTable");
                var rowLength = tableObj.rows.length;
                var cellCount = tableObj.rows[0].cells.length;
                function addRow(){
                    var newRow = tableObj.insertRow(rowLength);
        
                    for(var i=0;i<cellCount;i++){
                        var newCell = newRow.insertCell(i);
                        newRow.cells[0].innerHTML = rowLength;
                    }
                }
        
                function delRow(){
                    var rowLength = tableObj.rows.length;
                    
                    if(rowLength>1){
                        tableObj.deleteRow(rowLength-1);
                    }
                }
            </script>
        </div>

        </div>
